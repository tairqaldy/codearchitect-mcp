{
  "name": "codearchitect-mcp",
  "version": "0.1.6",
  "description": "Context continuity MCP server for developers. Solves AI conversation loss - automatically preserves architecture and code discussions for clear productivity advantage. Works seamlessly with Cursor and VS Code. Next: Full system design and architecture assistance.",
  "main": "dist/server.js",
  "type": "module",
  "bin": {
    "codearchitect-mcp": "dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "benchmark:toon": "tsx scripts/benchmark-toon.ts",
    "prepublishOnly": "npm run build",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "conversation",
    "session",
    "markdown",
    "cursor",
    "vscode",
    "visual-studio-code",
    "claude",
    "chatgpt",
    "ai-assistant",
    "conversation-storage",
    "context-management",
    "memory",
    "second-brain",
    "developer-tools",
    "productivity",
    "workflow",
    "architecture",
    "code-assistant",
    "ai-memory",
    "conversation-history",
    "session-management",
    "system-design",
    "system-architecture",
    "system-engineering",
    "system-maintenance"
  ],
  "author": "tairkaldybayev",
  "license": "CC-BY-NC-4.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@toon-format/toon": "^1.0.0",
    "tiktoken": "^1.0.22"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tairqaldy/codearchitect-mcp.git"
  }
